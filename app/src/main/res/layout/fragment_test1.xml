    <EditText
        android:id="@+id/txtEditText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="82dp"
        android:width="300dp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/txtEditText2"
        android:layout_alignStart="@+id/txtEditText2" />

    <EditText
        android:id="@+id/txtEditText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
